<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p><% @changeset.action %></p>
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

<div class="form-group">
  <%= label f, :title %>
  <%= text_input f, :title, class: "form-control" %>
  <%= error_tag f, :title %>
</div>

<div class="form-group">
  <%= label f, :description %>
  <%= textarea f, :description, class: "form-control" %>
  <%= error_tag f, :description %>
<div>

<%= if @edit do %>
<div class="form-group">
  <%= label f, :complete %>
  <%= checkbox f, :complete %>
  <%= error_tag f, :complete %>
<div>
<% end %>

<%= if @edit and @taskitem.user_id == @current_user.id do %>
<div class="form-group">
  <%= label f, :timespent %>
  <%= number_input f, :timespent, class: "form-control", value: 0, step: 15%>
  <%= error_tag f, :timespent %>
<div>
<% end %>

<div class="form-group">
  <%= label f, :user_id %>
  Assign to: <%= select(f, :user_id, Enum.map(@users, (&{&1.email, &1.id})))%>
  <%= error_tag f, :user_id %>
<div>




  <div>
    <%= submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
